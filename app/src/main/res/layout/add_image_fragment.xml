<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/highlight">

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="323dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.464">

        <ImageButton
            android:id="@+id/takePhotoBtn"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:background="@color/primary"
            app:srcCompat="@drawable/take_a_photo__2_" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="@color/secondary"
            android:gravity="center"
            android:text="@string/take_photo_icon"
            android:textColor="@color/primary"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="170dp"
        android:layout_height="323dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.464">

        <ImageButton
            android:id="@+id/openGalleryBtn"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:background="@color/primary"
            app:srcCompat="@drawable/picture__4_" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="@color/secondary"
            android:gravity="center"
            android:text="@string/open_gallery_icon"
            android:textColor="@color/primary"
            android:textSize="26sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>